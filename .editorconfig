root = true

[{*.ts,*.vue,*.js,*.jsx,*.tsx}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[{*.json,*.yml,*.yaml}]
indent_size = 2
indent_style = space
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
